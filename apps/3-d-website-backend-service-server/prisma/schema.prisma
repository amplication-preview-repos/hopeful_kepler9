datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Chat {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  message   String?
  sender    String?
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
}

model CollaborationInvitation {
  createdAt   DateTime                           @default(now())
  developer   Developer?                         @relation(fields: [developerId], references: [id])
  developerId String?
  id          String                             @id @default(cuid())
  project     Project?                           @relation(fields: [projectId], references: [id])
  projectId   String?
  status      EnumCollaborationInvitationStatus?
  updatedAt   DateTime                           @updatedAt
}

model Developer {
  bio                      String?
  collaborationInvitations CollaborationInvitation[]
  createdAt                DateTime                  @default(now())
  email                    String?
  id                       String                    @id @default(cuid())
  updatedAt                DateTime                  @updatedAt
  username                 String?
}

model Project {
  collaborationInvitations CollaborationInvitation[]
  createdAt                DateTime                  @default(now())
  description              String?
  endDate                  DateTime?
  id                       String                    @id @default(cuid())
  lead                     String?
  startDate                DateTime?
  title                    String?
  updatedAt                DateTime                  @updatedAt
}

enum EnumCollaborationInvitationStatus {
  Option1
}
